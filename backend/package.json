{
  "name": "rork-backend",
  "version": "1.0.0",
  "description": "Backend for Rork local marketplace app",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed-production.ts",
    "db:generate": "drizzle-kit generate",
    "db:studio": "drizzle-kit studio",
    "deploy": "railway deploy",
    "prod:start": "NODE_ENV=production node dist/index.js",
    "prod:setup": "npm run build && npm run db:migrate && npm run db:seed"
  },
  "dependencies": {
    "@hono/node-server": "^1.8.2",
    "@hono/trpc-server": "^0.4.0",
    "@trpc/server": "^11.5.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.35.0",
    "hono": "^4.9.5",
    "hono-rate-limiter": "^0.4.2",
    "jsonwebtoken": "^9.0.2",
    "postgres": "^3.4.4",
    "twilio": "^5.8.2",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "drizzle-kit": "^0.28.0",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3"
  }
}
