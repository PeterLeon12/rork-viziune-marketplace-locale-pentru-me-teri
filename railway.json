{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build",
    "sourceDirectory": "backend"
  },
  "deploy": {
    "startCommand": "npm run prod:start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
